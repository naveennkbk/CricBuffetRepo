@model CricBuffet.Areas.Tag.Models.MediaTag

<div class="col-lg-12 grid-margin stretch-card" style="margin-top:-36px">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">
                <span style="color: #76bf70">Add</span> <span style="color: #1F3BB3">Menu</span>
            </h4>

            @using (Html.BeginForm("MediaTagEdit", "MediaTag", FormMethod.Post, new { area = "Tag", encType = "multipart/form-data", onSubmit = " return subform(this)" }))

            {

                @Html.HiddenFor(model => model.ID)

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.TagName, new { @class = "control-label" })
                                    @Html.EditorFor(model => model.TagName, new { htmlAttributes = new { @class = "form-control", @id = "menuName" } })
                                    @Html.ValidationMessageFor(model => model.TagName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group" style="margin-top:50px;margin-left:12px;">
                    <input type="submit" value="Save" class="btn btn-primary" style="padding:3px;font-size:16px" />
                    <a class="btn btn-danger" href='@Url.Action("MediaTagList", "MediaTag", new { Area = "Tag" })' style="padding:5px">Back</a>
                </div>
            }
        </div>
    </div>
</div>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>