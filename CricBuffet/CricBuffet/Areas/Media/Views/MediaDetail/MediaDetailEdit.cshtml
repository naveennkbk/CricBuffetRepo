@model CricBuffet.Areas.Media.Models.MediaDetail

<link href="~/Scripts/summernote-0.8.18-dist/summernote-bs4.css" rel="stylesheet" />
<link href="~/Scripts/summernote-0.8.18-dist/summernote-lite.css" rel="stylesheet" />
<link href="~/Scripts/summernote-0.8.18-dist/summernote-bs4.css" rel="stylesheet" />

<style>
    .note-editor.note-frame {
        width: 900px
    }
</style>

<div class="col-lg-12 grid-margin stretch-card" style="margin-top:-36px">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">
                <span style="color: #76bf70">Add</span> <span style="color: #1F3BB3">MediaDetail</span>
            </h4>

            @using (Html.BeginForm("MediaDetailEdit", "MediaDetail", FormMethod.Post, new { area = "Media", encType = "multipart/form-data", onSubmit = " return subform(this)", id = "myForm" }))

            {

                @Html.HiddenFor(model => model.ID)

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MediaTitle, new { @class = "control-label" })
                                    @Html.EditorFor(model => model.MediaTitle, new { htmlAttributes = new { @class = "form-control", @id = "buddyName" } })
                                    @Html.ValidationMessageFor(model => model.MediaTitle, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.BuddyId, new { @class = "control-label" })
                                    <select asp-for="BuddyId" class="form-control" asp-items="ViewBag.BuddyId">
                                        <option>select buddy</option>
                                    </select>
                                    @Html.ValidationMessageFor(model => model.MediaDescription, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">

                            <div class="col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MediaTag, new { @class = "control-label" })
                                    <select asp-for="MediaTag" class="form-control" asp-items="ViewBag.MediaTag">
                                        <option>select MediaTag</option>
                                    </select>
                                    @Html.ValidationMessageFor(model => model.MediaDescription, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MediaDescription, new { @class = "control-label" })
                                    @Html.TextAreaFor(model => model.MediaDescription, new { htmlAttributes = new { @class = "forming" } })
                                    @Html.ValidationMessageFor(model => model.MediaDescription, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group" style="margin-top:50px;margin-left:32px;">
                    <input type="submit" value="Save" class="btn btn-primary" style="padding:3px;font-size:16px" />
                    <input type="submit" value="Back" class="btn btn-danger" style="padding:3px;font-size:16px" />
                </div>
            }
        </div>
    </div>
</div>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
<script src="~/Scripts/summernote-0.8.18-dist/summernote.js"></script>
<script src="~/Scripts/summernote-0.8.18-dist/summernote-lite.js"></script>
<script src="~/Scripts/summernote-0.8.18-dist/summernote-bs4.js"></script>
<script>

    $('#MediaDescription').summernote({
        height: 300,                 // set editor height
        minHeight: null,             // set minimum height of editor
        maxHeight: null,             // set maximum height of editor
        focus: true

    });
</script>  