@model CricBuffet.Areas.Admin.Models.BuddyViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BuddyEdit</title>
    <style>
        #buddyName {
            width: 210px;
            height: 30px
        }

        label {
            white-space: nowrap
        }
    </style>
</head>
<body>

    <h4>Buddy</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">

            @using (Html.BeginForm("BuddyEdit", "Buddy", FormMethod.Post, new { area = "Admin", encType = "multipart/form-data", onSubmit = " return subform(this)" }))

            {

                @Html.HiddenFor(model => model.ID)

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.BuddyName, new { @class = "control-label" })
                                    @Html.DisplayFor(model => model.BuddyName, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12" id="imagehideshow">

                            <div id="imgPreview">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ProfileImage, new { @class = "control-label" })
                                    <img class="img-responsive" src="@Url.Content("/images/"+@Model.BuddyPicture)" id="targetImg" style="height:70px;width:70px;border-radius:25px" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</body>
</html>