@model CricBuffet.Areas.Menu.Models.MediaMenu

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MenuEdit</title>
    <style>
        #menuName {
            width: 210px;
            height: 30px
        }

        label {
            white-space: nowrap
        }
    </style>
</head>
<body>

    <h4>Buddy</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">

            @using (Html.BeginForm("MenuView", "Media", FormMethod.Post, new { area = "Menu", encType = "multipart/form-data", onSubmit = " return subform(this)" }))

            {

                @Html.HiddenFor(model => model.Id)

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MediaMenuName, new { @class = "control-label" })
                                    @Html.EditorFor(model => model.MediaMenuName, new { htmlAttributes = new { @class = "form-control", @id = "menuName" } })
                                    @Html.ValidationMessageFor(model => model.MediaMenuName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</body>
</html>