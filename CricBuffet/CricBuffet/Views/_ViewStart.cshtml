@{
    string CurrentReq = Convert.ToString(Context.Request.HttpContext.Request.RouteValues["Controller"]);
    dynamic Layout;
    switch (CurrentReq)
    {
        case "CricBuffet":
            Layout = "~/Views/Shared/CricBuffetLayout.cshtml";
            break;
        default:
            //Admin layout
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }
}  